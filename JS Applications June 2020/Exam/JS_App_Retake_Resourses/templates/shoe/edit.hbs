    {{>header}}
        <!-- Edit -->
        <h1>Edit Offer</h1>
        <p class="message"></p>
        <form action="#/edit/{{objectId}}" method="POST">
            <div>
                <input type="text" placeholder="Name..." name="name" value="{{name}}">
            </div>
            <div>
                <input type="text" placeholder="Price..." name="price" value="{{price}}">
            </div>
            <div>
                <input type="text" placeholder="Image url..." name="imageUrl" value="{{imageUrl}}">
            </div>
            <div>
                <textarea placeholder="Give us some description about this offer..." name="description">{{description}}</textarea>
            </div>
            <div>
                <input type="text" placeholder="Brand..." name="brand" value="{{brand}}">
            </div>
            <div>
                <button type="submit">Edit</button>
            </div>
        </form>
    {{>footer}}