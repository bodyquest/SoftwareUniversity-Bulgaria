@model IList<FastFood.Web.ViewModels.Items.ItemsAllViewModels>

@{
    ViewData["Title"] = "All Items";
}
<h1 class="text-center">All Items</h1>
<hr class="hr-2" />
<div align="center">
    <a type="submit" class="btn btn-primary" style="align-content: center" asp-controller="Items" asp-action="Create">Create</a>
</div>
<br />
<table class="table mx-auto">
    <thead>
        <tr class="row">
                @*<th class="col-md-1">#</th>*@
                <th class="col-md-1">Name</th>
                <th class="col-md-2">Price</th>
                <th class="col-md-2">Category</th>
            </tr>
        </thead>
        <tbody>
            @*@for (var i = 0; i < Model.Count(); i++)
            {
                <tr class="row">
                    <th class="col-md-1">@(i + 1)</th>
                    <td class="col-md-2">@Model[i].Name</td>
                    <td class="col-md-2">@Model[i].Price</td>
                    <td class="col-md-2">@Model[i].Category</td>
                </tr>
            }*@
            @foreach (var item in Model.OrderBy(x => x.Name))
            {
                <tr class="row">
                    <th class="col-md-1">@item.Name</th>
                    <td class="col-md-2">@item.Price</td>
                    <td class="col-md-2">@item.Category</td>
                </tr>
            }
        </tbody>
    </table>
