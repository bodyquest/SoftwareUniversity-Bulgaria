@{
    ViewData["Title"] = "All Orders";
}
<h1 class="text-center">All Orders</h1>
<hr class="hr-2" />
<div align="center">
    <a type="submit" class="btn btn-primary" style="align-content: center" asp-controller="Orders" asp-action="Create">Create</a>
