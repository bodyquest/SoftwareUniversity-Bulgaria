@model IList<FastFood.Web.ViewModels.Orders.OrderAllViewModel>

@{
    ViewData["Title"] = "All Orders";
}
<h1 class="text-center">All Orders</h1>
<hr class="hr-2" />
<div align="center">
    <a type="submit" class="btn btn-primary" style="align-content: center" asp-controller="Orders" asp-action="Create">Create</a>
</div>
<br />
<table class="table mx-auto">
    <thead>
        <tr class="row">
            <th class="col-md-1">OrderId</th>
            <th class="col-md-2">Customer</th>
            <th class="col-md-2">Employee</th>
            <th class="col-md-2">DateTime</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.OrderByDescending(x => x.DateTime))
        {
            <tr class="row">
                <th class="col-md-1">@i.OrderId</th>
                <td class="col-md-2">@i.Customer</td>
                <td class="col-md-2">@i.Employee</td>
                <td class="col-md-2">@i.DateTime</td>
            </tr>
        }
    </tbody>
</table>