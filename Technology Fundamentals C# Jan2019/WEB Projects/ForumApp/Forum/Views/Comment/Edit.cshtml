@model Comment

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Comment</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Comment" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommentId" />
            <input type="hidden" asp-for="TopicId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="7"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                <a href="/Topic/Details/@ViewContext.RouteData.Values["TopicId"]" class="btn btn-default">Back to Details</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
