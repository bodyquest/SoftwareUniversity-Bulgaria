@using Spice.Services.Admin.Models.Coupons
@model IEnumerable<AdminCouponListingServiceModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Coupon List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(c => c.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.MinimumAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.IsActive)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(c => item.Name)
            </td>
            <td>
                @Html.DisplayFor(c => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(c => item.MinimumAmount)
            </td>
            <td>
                @Html.DisplayFor(c => item.IsActive)
            </td>
            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
            }
        </table>
    }
    else
    {
        <p>No coupons exist...</p>
    }
</div>

