@using Spice.Services.Admin.Models.MenuItems
@model IEnumerable<AdminMenuItemVM>

@if (Model.Count() > 0)
{
    <div class="col-12">
        <div class="row">
            <h3 class="text-primary pl-3"> @Model.FirstOrDefault().Category.Name </h3>
        </div>

        @foreach (var item in Model)
        {
            <div class="border border-secondary rounded col-12" style="margin-bottom: 10px; margin-top: 10px; padding: 10px">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" width="99%" style="border radius: 5px; border: 1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                            <div class="row pr-3">
                                <div class="col-8">
                                    <label class="text-primary" style="font-size: 20px; color: darkslategrey">@item.Name</label>
                                    @if (item.Spicyness.ToString() == "1")
                                    {
                                        <img srcset="/img/mild.png" title="Mild" />
                                    }
                                    @if (item.Spicyness == "2")
                                    {
                                        <img srcset="/img/spicy.png" title="Spicy" />
                                    }
                                    @if (item.Spicyness.ToString() == "3")
                                    {
                                        <img srcset="/img/veryspicy.png" title="Very Spicy" />
                                    }
                                </div>
                                <div class="col-4 text-right" style=" color: darkslategrey">
                                    <h4>$@item.Price</h4>
                                </div>
                            </div>

                            <div class="col-12 text-justify d-none d-md-block">
                                <p>@Html.Raw(item.Description)</p>
                            </div>

                            <div class="col-md-3 col-sm-12 offset-md-9 text-center text-white">
                                <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@item.Id">Details</a>
                            </div>
                    </div>
                </div>
            </div>
        }
        <div class="p-4"></div>
    </div>
}